<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="testAnd.AppShell"
       xmlns:views="clr-namespace:praktApp.Views" >
    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor" Value="White" />
                <Setter Property="Shell.TabBarDisabledColor" Value="Black"/>
                <Setter Property="Shell.TabBarTitleColor" Value="MediumSlateBlue" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="DimGray" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>
    <TabBar>
        <ShellContent Title="Учить" Icon="icon_study.png" ContentTemplate="{DataTemplate views:studyPage}">
        </ShellContent>
        <ShellContent Title="Словарь" Icon="icon_book.png" ContentTemplate="{DataTemplate views:glossaryPage}">
        </ShellContent>
        <ShellContent Title="Меню" Icon="icon_menu.png" ContentTemplate="{DataTemplate views:menuPage}">
        </ShellContent>
    </TabBar>
</Shell>