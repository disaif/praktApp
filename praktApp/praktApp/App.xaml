<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="praktApp.App">
    <Application.Resources>
        <ResourceDictionary>

            <Style TargetType="Label">
                <Setter Property="FontSize" Value="16"></Setter>
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="CornerRadius" Value="10"></Setter>
            </Style>
            <Style TargetType="Frame">
                <Setter Property="CornerRadius" Value="10"></Setter>
            </Style>

            <Color x:Key="LBackgroundColor">#FEFEFE</Color>
            <Color x:Key="DBackgroundColor">#252626</Color>
            
            <Color x:Key="LTextColor">#151515</Color>
            <Color x:Key="DTextColor">#D6D6D6</Color>

            <Color x:Key="LFrameColor">#F8F8FF</Color>
            <Color x:Key="DFrameColor">#3D3D3D</Color>

            <Color x:Key="LBorderColor">#808080</Color>
            <Color x:Key="DBorderColor">#626161</Color>

        </ResourceDictionary>
    </Application.Resources>
</Application>